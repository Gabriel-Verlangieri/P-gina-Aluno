function adicionarDescricao() {
    const texto = document.getElementById("nova-descricao").value;
    if (texto.trim() !== "") {
        const p = document.createElement("p");
        p.textContent = texto;
        document.getElementById("descricao-extra").appendChild(p);
        document.getElementById("nova-descricao").value = "";


